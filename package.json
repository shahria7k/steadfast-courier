{
    "name": "steadfast-courier",
    "version": "1.0.1",
    "description": "TypeScript SDK for Steadfast Courier Limited API with webhook support",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.mjs"
            },
            "require": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            }
        },
        "./webhooks": {
            "import": {
                "types": "./dist/webhooks/index.d.ts",
                "default": "./dist/webhooks/index.mjs"
            },
            "require": {
                "types": "./dist/webhooks/index.d.ts",
                "default": "./dist/webhooks/index.js"
            }
        },
        "./package.json": "./package.json"
    },
    "files": [
        "dist",
        "README.md",
        "CHANGELOG.md",
        "LICENSE"
    ],
    "scripts": {
        "build": "tsc -p tsconfig.build.json && npm run build:esm",
        "build:esm": "tsc -p tsconfig.build.json --module esnext --outDir dist-esm && node scripts/fix-esm-extension.js",
        "dev": "tsc --watch",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "format:check": "prettier --check \"src/**/*.ts\"",
        "docs": "typedoc",
        "docs:serve": "typedoc --serve",
        "prepublishOnly": "npm run build && npm run test"
    },
    "keywords": [
        "steadfast",
        "courier",
        "delivery",
        "api",
        "sdk",
        "typescript",
        "webhook"
    ],
    "author": "",
    "license": "MIT",
    "engines": {
        "node": ">=18.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/shahria7k/steadfast-courier.git"
    },
    "bugs": {
        "url": "https://github.com/shahria7k/steadfast-courier/issues"
    },
    "homepage": "https://github.com/shahria7k/steadfast-courier#readme",
    "devDependencies": {
        "@types/express": "^5.0.6",
        "@types/node": "^20.10.0",
        "@typescript-eslint/eslint-plugin": "^6.13.0",
        "@typescript-eslint/parser": "^6.13.0",
        "@vitest/coverage-v8": "^1.0.4",
        "eslint": "^8.54.0",
        "express": "^4.22.1",
        "fastify": "^4.29.1",
        "prettier": "^3.1.0",
        "tsx": "^4.21.0",
        "typedoc": "^0.25.0",
        "typescript": "^5.3.2",
        "vitest": "^1.0.4"
    },
    "peerDependencies": {
        "express": "^4.18.0",
        "fastify": "^4.24.0"
    },
    "peerDependenciesMeta": {
        "express": {
            "optional": true
        },
        "fastify": {
            "optional": true
        }
    }
}
